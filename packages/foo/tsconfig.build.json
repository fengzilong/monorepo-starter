{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/bases/strictest"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}